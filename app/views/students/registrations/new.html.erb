<%= devise_error_messages! %>
<center><h2 class="head">Student Sign Up</h2></center>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :multipart => true}) do |f| %>
  
  <div class="form-row">
    <div class="form-group col-md-4 col-md-offset-2">
      <div class="field">
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder:"First Name"  %>
      </div>
    </div>
    <div class="form-group col-md-4">
      <div class="field">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name, autofocus: true, class: "form-control", placeholder:"Last Name"  %>
      </div>
    </div>
  </div>
  
  <div class="form-group col-md-8 col-md-offset-2">
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder:"Email"  %>
    </div>
  </div>


  <div class="form-group col-md-4 col-md-offset-2">
    <%= f.label :school_name%><br />
    <%= f.text_field :school_name, list: "schools_autocomplete",class: 'form-control' %>
    <datalist id="schools_autocomplete">
      <%= School.all.each do |school| %>
        <option value="<%= school.name %>"></option>
      <% end %>
    </datalist>
  </div>
  <%if false%>
  <div class="form-group col-md-4 col-md-offset-2">
<div class="field">
    <%= f.label :school_name %>
    <em>(if applicable)</em><br />
    <%= f.text_field :school_name, data: {autocomplete_source: schools_path}, placeholder: '(School Name)', class: 'form-control' %>
  </div> 
  </div>
  <%end%>
  
  <div class="form-group col-md-4">
      <%= label_tag(:school_password, "School password:") %><br />
    <%= password_field_tag(:school_password, "", class: 'form-control', placeholder:"School Password") %>
  </div>
  
  <div class="form-group col-md-8 col-md-offset-2">
    <div class="field">
      <%= f.label :avatar %><br />
      <%= f.label :avatar do %>
        <%= f.file_field :avatar, class: "form-control-file" %>
        <%= f.hidden_field :avatar_cache %>
      <% end %>
    </div>
  </div>

  <div class="form-group col-md-8 col-md-offset-2">
    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    </div>
  </div>
  <div class="form-group col-md-8 col-md-offset-2">
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
    </div>
  </div>

<div class="form-group col-md-8 col-md-offset-2">
  <div class="actions">
    <center>
    <%= f.submit "Sign up", class: "btn btn-primary" %>
    </center>
    <center>
<%= render "students/shared/links" %>
</center>
  </div>
  </div>
<% end %>

<style>
  html,body{
    height:100%;
    width:100%;
    margin-top:20px;
  }
  .head{
    padding-bottom:20px;
  }
</style>
