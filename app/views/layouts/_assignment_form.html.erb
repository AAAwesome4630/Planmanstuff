<%= form_for @assignment, url: assignments_path(@assignment) do |f| %>

    <%= f.hidden_field :classroom_id, :value => @classroom_id %>
  <div class="form-row">
    <div class="form-group col-md-12">
      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>
    </div>
  </div>
  
  <div class="form-group col-md-4">
  <div class="field">
    <%= f.label :due_date %><br />
    <%= f.date_field :due_date, autofocus: true, class: "form-control", min: Date.today %>
  </div>
  </div>
  
 
  <div class="form-group col-md-4">
  <div class="field">
    <%= f.label "Estimated Time" %> <em>(in minutes)</em><br />
    <%= f.number_field :eta, autofocus: true, class: "form-control" %>
  </div>
  </div>
  <div class="form-group col-md-4">
  <div class="field">
    <%= f.label "Estimated Number of Days needed to Complete" %><br />
    <%= f.number_field :rec_days, autofocus: true, class: "form-control" %>
  </div>
  </div>
  <div class="form-group col-md-12">
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description,cols: 20, rows: 5, autofocus: true, class: "form-control big-text", placeholder:"Description"%>
  </div>
  </div>

  <div class="actions">
    <%= f.submit "Create Assignment", class: "btn btn-primary" %>
  </div>
  
<% end %>